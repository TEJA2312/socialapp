  <form action="/home/<%= docs._id %>/?_method=PUT" method="POST">
 
 <div class="form-group">
    <label for="exampleInputEmail1">Title of the book </label>
    <input type="text"name="title" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" value="<%=docs.title%>" required>
    
  </div>
  <div class="form-group">
    <label for="exampleInputEmail1"> author of the book/ Director of the movie </label>
    <input type="text" name="authorof_book" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" value="<%=docs.authorof_book%>" required>
    
  </div>
   <div class="form-group">
    <label for="exampleInputEmail1">Image Link</label>
    <input type="text" name="image" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" value="<%=docs.image%>" required>
    
  </div>

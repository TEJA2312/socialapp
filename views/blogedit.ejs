    <label for="exampleFormControlTextarea1"> Your Summary </label>
    <textarea name="your_summary" class="form-control" id="exampleFormControlTextarea1" value="<%=docs.your_summary%>" rows="3"></textarea>
  </div>
  <div class="form-group">
    <label for="exampleFormControlTextarea1">Mention what you liked about the book</label>
    <textarea name="what_like" class="form-control" id="exampleFormControlTextarea1" value="<%=docs.what_like%>" rows="3"></textarea>
  </div>
  <div class="form-group">
    <label for="exampleFormControlTextarea1">Mention what you disliked about the book</label>
    <textarea  name="what_dislike" class="form-control" id="exampleFormControlTextarea1" value="<%=docs.what_dislike%>" rows="3"></textarea>
  </div>
<h4>RATING</h4>
 <div class="form-group">
  <div class="form-check">
  <input class="form-check-input" type="radio" name="rating" id="exampleRadios1" value="Good" checked>
  <label class="form-check-label" for="exampleRadios1">
